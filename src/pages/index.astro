---
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import localHeroImage from '../assets/img/main.png';
---

<Layout title="Edgar G. Vargas">
	<main>
		<section>
			<div class="flex flex-row justify-center items-center">
				<div>
					<h1 class="text-6xl font-bold">Edgar G. Vargas</h1>
					<p class="text-xl">
						Software Developer
					</p>
				</div>
				<Image src={ localHeroImage } alt="Hero" loading="eager" />
			</div>
		</section>
	</main>
</Layout>
